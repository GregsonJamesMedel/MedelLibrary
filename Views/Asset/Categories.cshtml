@model IEnumerable<MedelLibrary.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<table class="table table-hover table-striped">
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>@category.id</td>
            <td>@category.Name</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-controller="Asset" asp-action="AddCategory" asp-route-id="@category.id"> 
                    <i class="fas fa-fw fa-edit"></i> Edit
                </a> | 
                <form asp-controller="Asset" asp-action="DeleteCategory" asp-route-id="@category.id" method="post" style="display: inline;">
                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>