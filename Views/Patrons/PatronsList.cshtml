@model IEnumerable<MedelLibrary.ViewModels.PatronModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Patrons";
}

<div class="col-md-12">
    <table class="table table-hover" id="patronsTable">
        <thead>
            <th>Photo</th>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Address</th>
        </thead>
        <tbody>
            @foreach (var patron in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Account" asp-action="Profile" asp-route-id="@patron.Id">
                            <img src="~/ProfilePhotos/@patron.ImageUrl" style="width: 60px; height: 80px" asp-append-version="true">
                        </a>
                    </td>
                    <td>@patron.Email</td>
                    <td>@patron.Firstname</td>
                    <td>@patron.Lastname</td>
                    <td>@patron.Address</td>
                </tr>
            }
            </tbody>
        </table>
    </div>