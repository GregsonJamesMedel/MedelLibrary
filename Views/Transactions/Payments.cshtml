@model IEnumerable<MedelLibrary.ViewModels.TransactionsPaymentVM>
@{
    ViewBag.Title = "Payments";
}

<h2 class="text-center text-primary">Patrons with current fees</h2>
<div class="col-md-12">
    <table class="table table-hover" id="dataTable">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Current Fees</th>
            <th>Action</th>
        </thead>
        <tbody>
            @foreach (var patron in Model)
            {
                <tr>
                    <td>@patron.PatronId.Substring(0,8)</td>
                    <td>@patron.FullName</td>
                    <td>@String.Format("{0:0.00}", patron.CurrentFees)</td>
                    <td>
                        <form asp-controller="Transactions" asp-action="Payments" asp-route-Id="@patron.PatronId" method="POST">
                            <button class="btn btn-primary" type="submit">Settle</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>