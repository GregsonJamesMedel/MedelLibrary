@model IEnumerable<MedelLibrary.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h1>Categories</h1>
<table class="table table-hover table-striped">
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>@category.id</td>
            <td>@category.Name</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-controller="Book" asp-action="AddCategory" asp-route-id="@category.id">Edit</a> | 
                <a class="btn btn-sm btn-danger" asp-controller="Book" asp-action="DeleteCategory" asp-route-id="@category.id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>