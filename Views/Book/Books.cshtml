@model IEnumerable<MedelLibrary.Models.Book>
@{
    ViewBag.Title = "Books";
}

<div class="col-md-12">
    <table class="table table-hover table-striped">
        <thead>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Cost</th>
            <th>Condition</th>
            <th>Category</th>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Status</td>
                    <td>P @book.Cost.ToString("0.##")</td>
                    <td>@book.Condition</td>
                    <td>@book.Category.Name</td>

                </tr>
            }
        </tbody>
    </table>
</div>