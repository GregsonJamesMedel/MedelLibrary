@model MedelLibrary.ViewModels.EditBookVM
@{
    ViewBag.Title = "Edit Book";
}

<div class="col-md-9">
    <div class="card mb-4">
        <div class="card-header text-primary">
            @ViewBag.Title
        </div>
        <div class="card-body">
            <form asp-controller="Book" asp-action="EditBook" method="post">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="@Model.ISBN"></label>
                        <input asp-for="@Model.ISBN" class="form-control">
                        <span asp-validation-for="@Model.ISBN" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="@Model.Title"></label>
                        <input asp-for="@Model.Title" class="form-control">
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="@Model.Author"></label>
                        <input asp-for="@Model.Author" class="form-control">
                        <span asp-validation-for="@Model.Author" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="@Model.Shelf"></label>
                        <select asp-for="@Model.Shelf" class="form-control">
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="SHELF-@i">SHELF-@i</option>
                            }
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="@Model.Category"></label>
                            <select asp-for="@Model.Category" class="form-control">
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.id">@category.Name</option>
                                }
                            </select>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="@Model.NumberOfCopies"></label>
                            <input asp-for="@Model.NumberOfCopies" class="form-control">
                            <span asp-validation-for="@Model.NumberOfCopies" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="@Model.Year"></label>
                            <input asp-for="@Model.Year" class="form-control">
                            <span asp-validation-for="@Model.Year" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="@Model.Cost"></label>
                            <input asp-for="@Model.Cost" class="form-control">
                            <span asp-validation-for="@Model.Cost" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="@Model.Status"></label>
                            <select asp-for="@Model.Status" class="form-control">
                                <option value="Available">Available</option>
                                <option value="Checked Out">Checked Out</option>
                                <option value="Lost">Lost</option>
                            </select>
                            <span asp-validation-for="@Model.Status" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="@Model.Condition"></label>
                            <select asp-for="@Model.Condition" class="form-control">
                                <option value="New">New</option>
                                <option value="Old">Old</option>
                                <option value="Damaged">Damaged</option>
                            </select>
                            <span asp-validation-for="@Model.Condition" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="@Model.ImageUrl">
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Save</button>
                    <a class="btn btn-primary mr-1 float-right" asp-controller="Asset" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
                </form>
            </div>
        </div>
    </div>