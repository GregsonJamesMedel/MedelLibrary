@model MedelLibrary.ViewModels.AddCategoryVM
@{
    ViewBag.Title = "New Category";
}

<div class="col-md-6">
    <div class="card mb-4">
        <div class="card-header text-primary">
            Add Category
        </div>
        <div class="card-body">
            <form asp-controller="Book" asp-action="NewCategory" method="post">

                <div class="form-group">
                    <label asp-for="@Model.Name">Category Name</label>
                    <input asp-for="@Model.Name" class="form-control form-control-user">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>
